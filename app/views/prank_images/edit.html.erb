<% title "#{@prank.title} | Edit Image" %>
<div id="title">
  <h2><%= @prank.title %><span class="grey">: Edit Image<span></h2>
  <p class="small-link"><%= link_to 'Back to prank', @prank %> | <%= link_to 'Back to photos', photos_path(@prank) %></p>
</div>
<%= error_messages_for :image %>
<div id="caption">
<%- form_for(@image, :url => prank_image_path(:prank_id => @prank), :html => { :class => 'tool' }) do |f| -%>
	<div class="fltlftimg">
		<%= image_tag @image.public_filename(:thumb), :class => 'album-pic' %>
		<p class="edit-link"><%= link_to '[x] Delete Image', prank_image_path, :confirm => 'Are you sure you want to delete the image?', :method => :delete if owner_or_admin?(@prank) %></p>
	</div>
	<p>
		<%= f.label :caption %><br />
		<%= f.text_area :caption, :cols => 36, :rows => 5 %>
	</p>
	<p><%= f.submit "Save" %></p>
<%- end -%>
</div>