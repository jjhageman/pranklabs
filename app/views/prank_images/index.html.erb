<div id="title">
    <h2><%= @prank.title %> <span class="grey">Images</span></h2>
	<p class="small-link"><%= link_to 'Back to prank', @prank %> | <%= link_to 'Back to photos', photos_path(@prank) %></p>
</div>
<%- if !@prank.has_images? -%>
	<p>There are no images for this album yet. <%= link_to "Have one to add one?", new_prank_image_path %></p>
<%- else -%>
	<ul id="tools">
		<li><%= pluralize(@image_count, "Image") %></li>
		<li><%= link_to 'Add Another Photo', new_prank_image_path %></li>
		<li><%= link_to 'Create New Photo Album', new_prank_album_path %></li>
	</ul>
	<%- for image in @images -%>
		<%= link_to image_tag(image.public_filename(:thumb), :class => 'album-pic'), prank_image_path(@prank, image) %>
	<%- end -%>
<%- end -%>