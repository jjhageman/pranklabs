<div id="title">
  <h2><%= @prank.title %><span class="grey"> Edit Video</span></h2>
  <p class="small-link"><%= link_to 'Back to prank', @prank %></p>
</div>
<%= error_messages_for :video %>

<% form_for(@video, :url => prank_video_path(@prank)) do |f| %>
  <%= f.error_messages %>
  <div class="video"><%= @video.display_video %></div>
  <div class="optiional">
    <%= f.label :title, 'Title:' %><%= f.text_field :title, :class => 'wideText' %>
  </div>
  <div class="required">
	<%= f.label :video_url, 'Video URL:' %> <%= f.text_field :video_url, :class => 'wideText' %>
	<small><strong>Examples:</strong>
		<ul>
	  		<li>YouTube: <em>http://www.youtube.com/watch?v=gEILFf2XSrM</em></li>
	  		<li>Vimeo: <em>http://www.vimeo.com/726135</em></li>
		</ul>
	</small>
  </div>
  <div class="submit">
    <%= f.submit 'Update' %>
    <%= f.submit "Cancel", :id => "cancel" %>
  </div>
<% end %>