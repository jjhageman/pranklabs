<% title "#{@user.login} | Edit Image" %>
<div id="title">
  <h2><%= @user.login %><span class="grey">: Editing Image</span></h2>
  <p class="small-link"><%= link_to 'Back to profile', @user %></p>
</div>
<%= error_messages_for :image %>
<div id="caption">
<%- form_for(@user.image, :url => user_image_path(:user_id => @user), :html => { :class => 'tool' }) do |f| -%>
	<div class="fltlftimg">
		<%= image_tag @user.image.public_filename(:thumb), :class => 'album-pic' %>
		<p class="edit-link"><%= link_to "[x] Delete Image", user_image_path, :confirm => 'Are you sure you want to delete the image?', :method => :delete %></p>
	</div>
	<p>
		<%= f.label :caption %><br />
		<%= f.text_area :caption, :cols => 36, :rows => 5 %>
	</p>
	<p><%= f.submit "Save" %></p>
<%- end -%>
</div>